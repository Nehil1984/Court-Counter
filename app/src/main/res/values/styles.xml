<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Primary theme color of the app (sets background color of app bar) -->
        <item name="colorPrimary">#5b10b3</item>
        <!-- Background color of buttons in the app -->
        <item name="colorButtonNormal">#a964ff</item>
        <!-- Set The Notification Bar  Color -->
        <item name="colorPrimaryDark">#5b10b3</item>
        <!-- Set the ActionBar Color -->
        <item name="android:textColorPrimary">#CCCCCC</item>
        <item name="android:textColor">#000000</item>
    </style>
</resources>
